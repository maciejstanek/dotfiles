# Colors settings
attrcolor b '.I'
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
defbce on

# Make Vim flush corretly after suspending or closing
altscreen on

# Main bottom status bar
hardstatus alwayslastline
hardstatus string '%{= yk} %H %{= Ky} %{= kw}%=%{= Ky} %-w%{= yk} %n*%t%? %{= Ky}%+w %{= kw}%=%{= Ky} %{= yk} %c '
msgminwait 1
msgwait 1

# Windows borders
sorendition '= kw'
caption splitonly
caption string '%{= kw}%=%{= Ky}%?%F %{= yk}%? %n %t %?%F%{= Ky} %?%{= kw}%='

